using System;

namespace SwapValues
{
    internal class Program
    {
        // Константы для содержимого чашек
        const int Empty = 0;
        const int Tea = 1;
        const int Coffee = 2;

        static void Main(string[] args)
        {
            // Пример 1 — Имена
            string Name1 = "Иван";
            string Name2 = "Петр";

            Console.WriteLine("Перестановка имен");
            Console.WriteLine("До перестановки:");
            Console.WriteLine($"Имя 1 - {Name1}");
            Console.WriteLine($"Имя 2 - {Name2}");

            string Temp = Name1;
            Name1 = Name2;
            Name2 = Temp;

            Console.WriteLine("После перестановки:");
            Console.WriteLine($"Имя 1 - {Name1}");
            Console.WriteLine($"Имя 2 - {Name2}");

            Console.WriteLine();

            // Пример 2 — Чашки
            int Cup1 = Coffee;
            int Cup2 = Tea;

            Console.WriteLine("Перестановка содержимого чашек");
            Console.WriteLine("До перестановки:");

            string Content1;
            switch (Cup1)
            {
                case Empty:
                    Content1 = "пусто";
                    break;
                case Tea:
                    Content1 = "чай";
                    break;
                case Coffee:
                    Content1 = "кофе";
                    break;
                default:
                    Content1 = "неизвестно";
                    break;
            }

            string Content2;
            switch (Cup2)
            {
                case Empty:
                    Content2 = "пусто";
                    break;
                case Tea:
                    Content2 = "чай";
                    break;
                case Coffee:
                    Content2 = "кофе";
                    break;
                default:
                    Content2 = "неизвестно";
                    break;
            }

            Console.WriteLine($"Чашка 1 - ({Content1})");
            Console.WriteLine($"Чашка 2 - ({Content2})");

            int TempCup = Cup1;
            Cup1 = Cup2;
            Cup2 = TempCup;

            Console.WriteLine();

            Console.WriteLine("После перестановки:");

            switch (Cup1)
            {
                case Empty:
                    Content1 = "пусто";
                    break;
                case Tea:
                    Content1 = "чай";
                    break;
                case Coffee:
                    Content1 = "кофе";
                    break;
                default:
                    Content1 = "неизвестно";
                    break;
            }

            switch (Cup2)
            {
                case Empty:
                    Content2 = "пусто";
                    break;
                case Tea:
                    Content2 = "чай";
                    break;
                case Coffee:
                    Content2 = "кофе";
                    break;
                default:
                    Content2 = "неизвестно";
                    break;
            }

            Console.WriteLine($"Чашка 1 - ({Content1})");
            Console.WriteLine($"Чашка 2 - ({Content2})");
        }
    }
}
